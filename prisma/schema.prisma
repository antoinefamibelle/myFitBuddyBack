model Exercice {
  id           String   @id
  type         String?
  name         String   @unique
  equipment    String?
  instructions String?
  difficulty   String?
  muscleGroup  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime
  User         User?    @relation(fields: [userId], references: [id])
  userId       String?
}

model User {
  id        String   @id
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime

  favorites Exercice[]
}
