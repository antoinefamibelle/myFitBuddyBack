model Exercice {
  id           String   @id
  type         String?
  name         String   @unique
  equipment    String?
  instructions String?
  difficulty   String?
  muscleGroup  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime
  userId       String?
  User         User?    @relation(fields: [userId], references: [id])
  workouts     Workout[]
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  firstName String
  lastName  String
  role      String
  createdAt DateTime   @default(now())
  updatedAt DateTime    @updatedAt
  favorites Exercice[]
  workouts  Workout[]
}

model Workout {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdById  String? // userId
  duration    Int? // in minutes
  difficulty  String?
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  exercices   Exercice[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}